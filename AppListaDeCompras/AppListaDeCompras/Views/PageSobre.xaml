<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaDeCompras.Views.PageSobre">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,20">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50*"/>
                    <RowDefinition Height="50*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="25*"/>
                </Grid.ColumnDefinitions>

                <StackLayout VerticalOptions="Center" HorizontalOptions="Start" Grid.Row="0" Grid.Column="1">
                    <Image Margin="15,15,0,0" x:Name="Imagem1" Aspect="AspectFit" VerticalOptions="Center" HorizontalOptions="Start" Source="Logotipo.png"   ></Image>
                </StackLayout>

                <Label x:Name="labelVersao" FontSize="Medium" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" TextColor="{DynamicResource CinzaEscuro}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1"/>

            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>